<Window
    x:Class="DHApp.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    FontSize="16"
    ResizeMode="NoResize"
    SizeToContent="WidthAndHeight"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Window.Effect>
        <DropShadowEffect />
    </Window.Effect>
    <StackPanel>
        <Grid x:Name="TitleGrid" Background="{StaticResource ThemeColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image Width="48" Source="Images/DHLogo.jpg" />
            <TextBlock
                Grid.Column="1"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Foreground="White"
                Text="Donanım Haber Giriş" />
            <Button
                x:Name="CloseButton"
                Grid.Column="2"
                Width="32"
                Height="32"
                Margin="0,0,4,0"
                Background="#22000000"
                BorderThickness="0"
                Content="&#xE894;"
                FontFamily="Segoe MDL2 Assets"
                Foreground="White" />
        </Grid>
        <StackPanel
            x:Name="LoginPanel"
            Width="240"
            Margin="8">
            <TextBlock Foreground="{StaticResource ThemeColor}" Text="Kullanıcı Adı:" />
            <TextBox
                x:Name="UsernameTB"
                Margin="0,4,0,0"
                BorderThickness="2"
                SelectionBrush="{StaticResource ThemeColor}"
                TextChanged="Box_TextChanged" />
            <TextBlock
                Margin="0,8,0,0"
                Foreground="{StaticResource ThemeColor}"
                Text="Şifre:" />
            <PasswordBox
                x:Name="PasswordPB"
                Margin="0,4,0,0"
                BorderThickness="2"
                PasswordChanged="Box_TextChanged"
                SelectionBrush="{StaticResource ThemeColor}" />
            <Button
                x:Name="LoginButton"
                Margin="0,8,0,0"
                Background="{StaticResource ThemeColor}"
                Content="Giriş"
                Foreground="White" />
        </StackPanel>
    </StackPanel>
</Window>
